<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bloodrequest"
    android:background="@drawable/back2">
    <io.alterac.blurkit.BlurLayout
        android:id="@+id/blurLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blk_blurRadius="3"
        app:blk_fps="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
    </io.alterac.blurkit.BlurLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/request_donor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textreq"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Blood Request"
        android:textColor="@color/red"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">


    </TextView>

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="481dp"
        android:background="@color/cream"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textreq">

        <EditText
            android:id="@+id/namereq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:hint="Name"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/reqphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="34dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:hint="Phone No"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/reqbloodgp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="69dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_add_black"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:hint="Blood Group"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/reqlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ic_city"
            android:drawablePadding="5dp"
            android:drawableTint="@color/black"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginRight="20dp"
            android:hint="Location (pin code)"
            android:inputType="number"
            android:maxLength="6" />

        <EditText
            android:id="@+id/reqreason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="34dp"
            android:layout_marginRight="20dp"
            android:hint="For Why (reason)"
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:backgroundTint="#2059EC"
            android:padding="10dp"
            android:text="Make Request"
            android:textSize="18sp" />

    </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

